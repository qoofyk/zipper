<?xml version="1.0"?>
<adios-config host-language="C">
  <adios-group name="atom" stats="On">
    <var name="nlocal" type="integer"/>
    <var name="size_one" type="integer"/>
    <var name="size" type="integer"/>
    <var name="rank" type="integer"/>
    <global-bounds dimensions="size, nlocal, size_one" offsets="rank, nlocal, size_one">
       <var name="atom" gwrite="t" type="double" dimensions="1, nlocal,size_one" 
            transform="none"/>
    </global-bounds>
  </adios-group>

  <method group="atom" method="FLEXPATH">QUEUE_SIZE=10;</method>
</adios-config>

